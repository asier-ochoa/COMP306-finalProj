<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="StartMenu"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@stylesheet.css">
    <VBox fx:id="root" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="0.0">
        <ImageView fx:id="puzzlePreview" fitHeight="600" preserveRatio="true"/>
        <HBox>
            <HBox styleClass="div">
                <Label text="Image path" styleClass="label"/>
                <TextField fx:id="imagePath"/>
                <Button text="Browse..." onAction="#browseFiles"/>
            </HBox>
            <HBox styleClass="div">
                <Label text="Vertical piece amount" styleClass="label"/>
                <Spinner fx:id="verticalTilesInput"/>
            </HBox>
            <HBox styleClass="div">
                <Label text="Horizontal piece amount" styleClass="label"/>
                <Spinner fx:id="horizontalTilesInput"/>
            </HBox>
        </HBox>
    </VBox>
</AnchorPane>
